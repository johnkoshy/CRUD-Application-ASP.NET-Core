@page
@model CRUD_APP.Pages.IndexModel

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-page="./Create" class="button button-success">Create New</a>
</p>

@if (Model.User == null || !Model.User.Any())
{
    <p>No users found.</p>
}
else
{
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.User)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td class="action-links">
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="button">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.ID" class="button button-secondary">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="button button-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}