@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<div class="text-center">
    <h1>User Management</h1>
    <p>Welcome to the User Management application.</p>
    <a asp-page="/Create" class="btn btn-primary">Add New User</a>
</div>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td class="action-links">
                        <a asp-page="/Edit" asp-route-id="@user.Id" class="button button-secondary">Edit</a>
                        <a asp-page="/Delete" asp-route-id="@user.Id" class="button button-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>